<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#087DFB"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainScreen" >

    <LinearLayout
        android:id="@+id/layout_user_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="5dp" >

            <TextView
                android:id="@+id/lbl_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="alin iordache"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/WhiteSmoke" />

            <Button
                android:id="@+id/btn_add_bike"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:background="@drawable/round_button"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/lbl_add_bike"
                android:onClick="onAddViewBikes"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>

        <com.facebook.widget.ProfilePictureView
            android:id="@+id/selection_profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:is_cropped="true"
            facebook:preset_size="normal" >
        </com.facebook.widget.ProfilePictureView>
    </LinearLayout>

    <TextView
        android:id="@+id/lbl_check_serial_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edt_serial_number"
        android:layout_alignLeft="@+id/edt_serial_number"
        android:layout_marginBottom="40dp"
        android:text="@string/lbl_check_serial"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/WhiteSmoke" />

    <Button
        android:id="@+id/btn_search_serial_number"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/edt_serial_number"
        android:layout_alignParentRight="true"
        android:background="@drawable/icon_search1"
        android:onClick="onSearchSerialNumber" />

    <ImageView
        android:id="@+id/img_fb_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onLoginFacebook"
        android:src="@drawable/loginfacebook1" />

    <TextView
        android:id="@+id/lbl_must_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/img_fb_login_button"
        android:layout_alignLeft="@+id/img_fb_login_button"
        android:text="@string/lbl_LoginToRegister"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/edt_serial_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lbl_must_login"
        android:layout_alignLeft="@+id/lbl_must_login"
        android:layout_marginBottom="154dp"
        android:layout_toLeftOf="@+id/btn_search_serial_number"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/WhiteSmoke" >

        <requestFocus />
    </EditText>

</RelativeLayout>