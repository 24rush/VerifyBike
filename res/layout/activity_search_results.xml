<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#087DFB"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SearchResults" >

    <TextView
        android:id="@+id/txt_Model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lbl_check_serial_number"
        android:layout_alignBottom="@+id/lbl_check_serial_number"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/lbl_check_serial_number"        
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/img_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:src="@drawable/red_alert" 
        android:contentDescription="TODO"/>

    <TextView
        android:id="@+id/lbl_check_serial_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblBikeStatus"
        android:layout_below="@+id/img_Status"
        android:layout_marginTop="116dp"
        android:text="@string/lbl_Model"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/lblBikeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/txt_bikeStatusNotInDb"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
