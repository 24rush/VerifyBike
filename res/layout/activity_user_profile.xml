<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cycletome"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UserProfile" >

  	<LinearLayout 
  	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"  
        android:layout_marginTop="20dp" 
        >
        
  	    <CheckBox
  	        android:id="@+id/chk_allow_contact_share"
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:text="Show my identity when my bike is searched for" />
  	    
  	    <TextView
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:textStyle="italic"
  	        android:text="(Note: providing your contact details can be very useful when your bike is stolen)" />

  	    <TextView
  	        android:id="@+id/lbl_user_profile_phone"
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:text="Phone number"
  	        android:textAppearance="?android:attr/textAppearanceLarge" />

  	    <EditText
  	        android:id="@+id/edt_user_profile_phone"
  	        android:layout_width="match_parent"
  	        android:layout_height="wrap_content"
  	        android:ems="10"
  	        android:inputType="phone" >

  	        <requestFocus />
  	    </EditText>

  	    <TextView
  	        android:id="@+id/lbl_user_profile_email"
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:text="Email"
  	        android:textAppearance="?android:attr/textAppearanceLarge" />

  	    <EditText
  	        android:id="@+id/edt_user_profile_email"
  	        android:layout_width="match_parent"
  	        android:layout_height="wrap_content"
  	        android:ems="10"
  	        android:inputType="textEmailAddress" />
  	    
  	</LinearLayout>

  	  <ImageView
        android:id="@+id/img_fb_logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onLogoutFacebook"
        android:src="@drawable/logout" />
  	  
  	  <TextView
  	      android:layout_width="wrap_content"
  	      android:layout_height="wrap_content"  	     
  	      android:layout_above="@id/img_fb_logout_button"
  	      android:textStyle="italic"
  	      android:text="(Note: logging out will not remove your bikes. You will, though, be unable to edit your bikes nor your privacy settings)" />
  	
</RelativeLayout>